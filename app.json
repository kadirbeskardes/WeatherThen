{
  "expo": {
    "name": "WeatherThen",
    "slug": "WeatherThen",
    "version": "0.4.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A90E2"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Bulunduğunuz konumdaki hava durumunu göstermek için konumunuza ihtiyacımız var.",
        "NSWidgetWantsLocation": true
      },
      "bundleIdentifier": "com.kadirbeskardes.WeatherThen"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4A90E2"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ],
      "package": "com.kadirbeskardes.WeatherThen"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Bulunduğunuz konumdaki hava durumunu göstermek için konumunuza ihtiyacımız var."
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "TemperatureSmall",
              "label": "Sıcaklık (Küçük)",
              "description": "Anlık sıcaklık ve hava durumu",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "none",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "TemperatureMedium",
              "label": "Sıcaklık (Orta)",
              "description": "Sıcaklık, nem ve rüzgar bilgisi",
              "minWidth": "250dp",
              "minHeight": "110dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "resizeMode": "horizontal",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "TemperatureLarge",
              "label": "Sıcaklık (Büyük)",
              "description": "Detaylı sıcaklık ve saatlik tahmin",
              "minWidth": "250dp",
              "minHeight": "250dp",
              "targetCellWidth": 4,
              "targetCellHeight": 4,
              "resizeMode": "horizontal|vertical",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "DailySummarySmall",
              "label": "Günlük Özet (Küçük)",
              "description": "Bugünün hava durumu özeti",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "none",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "DailySummaryMedium",
              "label": "Günlük Özet (Orta)",
              "description": "Bugünün detaylı hava durumu",
              "minWidth": "250dp",
              "minHeight": "110dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "resizeMode": "horizontal",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "DailySummaryLarge",
              "label": "Günlük Özet (Büyük)",
              "description": "5 günlük hava durumu tahmini",
              "minWidth": "250dp",
              "minHeight": "250dp",
              "targetCellWidth": 4,
              "targetCellHeight": 4,
              "resizeMode": "horizontal|vertical",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "PrecipitationSmall",
              "label": "Yağış (Küçük)",
              "description": "Yağış olasılığı",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "none",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "PrecipitationMedium",
              "label": "Yağış (Orta)",
              "description": "Detaylı yağış tahmini",
              "minWidth": "250dp",
              "minHeight": "110dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "resizeMode": "horizontal",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "ComfortSmall",
              "label": "Konfor (Küçük)",
              "description": "Konfor indeksi ve UV seviyesi",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "none",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "MoonPhaseSmall",
              "label": "Ay Fazı (Küçük)",
              "description": "Mevcut ay fazı",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "none",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 3600000
            },
            {
              "name": "MoonPhaseMedium",
              "label": "Ay Fazı (Orta)",
              "description": "Ay fazı ve takvimi",
              "minWidth": "250dp",
              "minHeight": "110dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "resizeMode": "horizontal",
              "widgetFeatures": "reconfigurable",
              "updatePeriodMillis": 3600000
            }
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "51208e0e-63d1-47d9-8988-ef0393c1517e"
      }
    }
  }
}